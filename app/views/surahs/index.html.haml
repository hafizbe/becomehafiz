.page-header
  %h1= 'Welcome to Become Hafiz !'

#surah_container{:class => 'row-fluid'}
  #surah_option_wrapper{:class => 'span2'}
    %span#lecteur_play Play
    %span.hide.aa test
    %i{:class => "icon-play"}
    =form_tag('/surahs', :method => 'post', :multipart => true, :id => 'lstSurahsFrm') do
      %label
        Surahs
      =select_tag 'lstSurahs', options_for_select(@sourates_list.collect {|surah_id, surah_name|[surah_name,surah_id] }, @surah_id)
      %label
        Recitators
      =select_tag 'lstRecitators', options_for_select(@mapRecitators.collect {|recitator_name, recitator_value|[recitator_value,recitator_name] },@recitator_name)
      %label
        From versets
      =select_tag 'lstFromVersets', options_for_select(1..@from_verset_maximum["max"],@from_verset_minimum)
      %label
        To versets
      =select_tag 'lstToVersets', options_for_select(1..@from_verset_maximum["max"],@from_verset_maximum["max_selected"])
      %input{:type=>"hidden", :value=>0, :id =>"lstToVersetsCheck" , :name=>"lstToVersetsCheck"}
      %p Loading
      %div.progress.progress-striped.active
        %div.bar{:style => "width : 0%"}



  #surah_wrapper{:class => 'span10'}
    -i = @from_verset_minimum.to_i
    -@versets.each do |verset|
      %span{:class => 'verset'}=verset.ayahText
      %span{:class => 'break'} (#{i})
      -i = i + 1

