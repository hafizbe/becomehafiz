#user_id.hide=@user_id
#surah_container{:class => 'row-fluid'}
  = render 'wrapper_options'
  = render 'wrapper_tracker'
  - if @langue_selected == 'none'
    -@span_value = 9
  - else
    -@span_value = 7
  #surah_wrapper_ar.offset2{:class => "span#{@span_value}"}
    -i = @from_verset_minimum.to_i
    -ayah_id = 0
    -@versets.each do |verset|
      %div.verset_wrapper.dropdown
        -if @map_ayah_known != nil and @map_ayah_known.key? @ayahs_ids[ayah_id]
          -@known_class_value = @map_ayah_known[@ayahs_ids[ayah_id]]
        -else
          -@known_class_value = nil
        -if @versets_traduit.nil?
          %div{:class => "verset_content dropdown-toggle none_color arab_#{@size} #{@known_class_value}", :id => "ayah_#{i}",  'data-placement' => 'none','data-toogle'=>'dropdown','data-ayah-id'=>"#{@ayahs_ids[ayah_id]}"}=verset
        -else
          %div{:class => "verset_content dropdown-toggle arab_#{@size} #{@known_class_value}", :id => "ayah_#{i}",'modal_name' =>'myModal' ,'rel' => 'popover','data-ayah-id'=>"#{@ayahs_ids[ayah_id]}", 'data-placement' => 'right', 'data-traduction' => @versets_traduit[i-1]}=verset

        %ul.dropdown-menu
          %li
            =link_to new_user_session_path,'data-connected' => @user_signed,'data-action' => '1' do
              %span.label.label-success
                Very good
          %li
            =link_to new_user_session_path,'data-connected' => @user_signed,'data-action' => '2' do
              %span.label.label-warning
                Good
          %li
            =link_to new_user_session_path,'data-connected' => @user_signed,'data-action' => '3' do
              %span.label.label-important
                Bad
          %li.divider
          %li
            =link_to new_user_session_path,'data-connected' => @user_signed,'data-action' => '0' do
              %span.label.label-inverse
                Repete the verse

        -i = i + 1
        -ayah_id = ayah_id + 1
      %span.break.hide="("+i.to_s+")"
